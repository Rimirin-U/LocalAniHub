<UserControl x:Class="LocalAniHubFront.Views.Components.KeyValueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LocalAniHubFront.Views.Components"
             mc:Ignorable="d" 
             x:Name="root"
             MouseMove="UserControl_MouseMove">

    <Grid>
        <Border x:Name="ValueLabel"
                CornerRadius="8"
                Background="White"
                BorderBrush="#10000000"
                BorderThickness="1"
                Padding="0"
                Height="32"
                Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="KeyLabel"
                        Grid.Column="0"
                        CornerRadius="8"
                        Background="{DynamicResource AccentFillColorDefaultBrush}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch">
                    <TextBlock Text="{Binding Pair.Key,ElementName=root}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               Margin="10,0,10,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="16"
                               TextAlignment="Center"/>
                </Border>

                <TextBlock Grid.Column="1"
                           Margin="10,0,10,0"
                           FontSize="16"
                           Text="{Binding Pair.Value,ElementName=root}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="Black"/>
            </Grid>
        </Border>
    </Grid>


</UserControl>
