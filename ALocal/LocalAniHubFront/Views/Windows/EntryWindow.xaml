<ui:FluentWindow  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  x:Class="LocalAniHubFront.Views.Windows.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalAniHubFront.Views.Windows"
        xmlns:helper="clr-namespace:LocalAniHubFront.Helpers"
        xmlns:components="clr-namespace:LocalAniHubFront.ViewModels.Components"
        mc:Ignorable="d"
        Title="fTestWindow" Height="650" Width="1100"
        x:Name="EntryWindow"
                  
        ExtendsContentIntoTitleBar="True"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        WindowBackdropType="Mica"   
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
                  MouseWheel="OnMouseWheel">
    <ui:FluentWindow.Resources>
        <helper:HeightRatioConverter x:Key="HeightRatioConverter"/>
    </ui:FluentWindow.Resources>

    <Grid x:Name="Window">

        <!--TitleBar: 最小化、最大化、关闭按钮-->
        <ui:TitleBar x:Name="TitleBar"
                     Panel.ZIndex="10"/>

        <!--背景图-->
        <Grid x:Name="ImageGrid"
              Panel.ZIndex="0"
              VerticalAlignment="Top"
              helper:DragHelper.IsDragEnabled="True"
              Height="{Binding ImageGridHeight,Mode=OneWay,ElementName=EntryWindow}">

            <!-- Height需要处理: Full(Window)->Full(Window)->200 -->


            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding KeyVisual}"
                    Stretch="UniformToFill"
                    AlignmentX="Center"
                    AlignmentY="Center" />
<!--图片需要绑定-->
                </Rectangle.Fill>
            </Rectangle>
        </Grid>


        <!--MainGrid-->
        <Grid x:Name="MainGrid">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}-->
            <!--渐变遮罩及标题行-->
            <Grid x:Name="TopGrid"
                  Grid.Row="0"
                  helper:DragHelper.IsDragEnabled="True"
                  Height="{Binding TopGridHeight,Mode=OneWay,ElementName=EntryWindow}">
                <!-- Height需要处理: Full(Window)->Full(Window)->100 -->

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <!--由此实现放在底部-->
                </Grid.RowDefinitions>


                <!--渐变遮罩-->
                <Grid
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0"
                    IsHitTestVisible="False">

                    <Rectangle x:Name="MaskRectangle"
                               VerticalAlignment="Bottom"
                            Panel.ZIndex="1"
                            Height="{Binding MaskRectangleHeight,Mode=OneWay,ElementName=EntryWindow}">
                        <!-- Height需要处理: 100->Full(Gird:Top)->Full(Gird:Top) -->

                        <Rectangle.Fill>
<!--颜色需要绑定（需要求图片的平均色）-->
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="{Binding TransparentAverageColor}" Offset="0.0"/>
                                <GradientStop Color="{Binding AverageColor}" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                </Grid>

                <!--标题区域-->
                <Grid x:Name="TitleArea"
                      Grid.Row="1"
                      Panel.ZIndex="2"
                      VerticalAlignment="Bottom">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="Title"
                               Grid.Column="0"
                               VerticalAlignment="Bottom"
                               Text="{Binding MainTitle}"
                               FontFamily="Segoe UI"
                               FontWeight="Bold"
                               Foreground="White"
                               FontSize="40"
                               Margin="24,0,0,24"
                               LineStackingStrategy="BlockLineHeight"
                               LineHeight="24"
                               >
<!--MainTitle需要绑定-->
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                          BlurRadius="5"
                          Direction="315"
                          ShadowDepth="2"
                          Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="SubTitle"
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        Text="{Binding TimeSubTitle}"
                        FontFamily="Segoe UI"
                        FontWeight="Bold"
                        Foreground="White"
                        FontSize="14"
                        Margin="16,0,0,24"
                        LineStackingStrategy="BlockLineHeight"
                        LineHeight="24">
<!--TimeSubTitle需要绑定-->
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black"
                                  BlurRadius="5"
                                  Direction="315"
                                  ShadowDepth="2"
                                  Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>


            </Grid>


            <!--纯色背景及主要内容-->
            <Grid x:Name="MainArea"
                  Grid.Row="1">
                <!--颜色需要绑定-->
                <Rectangle x:Name="ColorRectangle"
                    Panel.ZIndex="1"
                    Margin="0,0,0,0"
                    IsHitTestVisible="False"
                    Fill="{Binding AverageColor}"/>

                <!--主要内容容器-->
                <Grid x:Name="MainContainer"
                    Panel.ZIndex="2" 
                    VerticalAlignment="Stretch" 
                    Margin="24,24,24,24">

                    <Frame x:Name="EntryWindowFrame"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           NavigationUIVisibility="Hidden"/>

                </Grid>
            </Grid>

        </Grid>
    </Grid>

</ui:FluentWindow>
