<Page
    x:Class="LocalAniHubFront.Views.Pages.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LocalAniHubFront.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:LocalAniHubFront.Models"
    xmlns:components="clr-namespace:LocalAniHubFront.Views.Components"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SearchPage"
    x:Name="EntrySearchPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ComboBox 
                          Grid.Row="0"
                          Margin="0,0,24,0"
                          MinWidth="120"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Panel.ZIndex="5"
                          Background="White"/>

                <ItemsControl ItemsSource="{Binding ViewModel.EntryInfoSets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <components:EntryInfoCard EntryInfoSet="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel 
                                Orientation="Horizontal"
                                Grid.Row="1"
                                Margin="-12,0,0,0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
